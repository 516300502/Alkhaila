        <field name="arch" type="xml">
            <form string="penalty_name">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="account_debit_id"/>
                            <field name="account_credit_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
