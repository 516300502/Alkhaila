<odoo>
    <data>

        <record id="exit_entry_tree" model="ir.ui.view">
            <field name="name">exit.entry.tree</field>
            <field name="model">exit.entry</field>
            <field name="arch" type="xml">
                <tree string="exit_entry  Tree">
                    <field name="employee_id"/>
                    <field name="type_exit_entry"/>
                    <field name="amount"/>
                    <field name="count"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="exit_entry_form" model="ir.ui.view">
            <field name="name">exit.entry.form</field>
            <field name="model">exit.entry</field>
            <field name="arch" type="xml">
                <form string="exit_entry  Form">
                    <header>
                        <button name="action_finance_manager" string="finance manager"
                                type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'hr_manager_accept')]}"/>


                        <button name="action_hr_manager_accept" string="موافقة الموارد البشرية"
                                type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                        <button name="action_director" string="Director Accept"
                                type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'finance_manager')]}"/>
                        <button name="action_accepted" string="الموافقة النهائية"
                                type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'director')]}"/>

                        <!--
                                                <button name="action_cancel" states="draft" type="object" string="الغاء"/>
                        -->
                        <button name="draft_advanced" attrs="{'invisible': [('state', '=', 'draft')]}" type="object"
                                string="الرجوع الى مسودة"/>

                        <button name="refuse_go" attrs="{'invisible': [('state', 'in', ['draft','accepted','director','refuse'])]}"
                                type="object" string="رفض"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,hr_manager_accept,finance_manager,director,accepted"/>
                    </header>

                    <sheet>

                        <group>
                            <group>
                                <field name="order_number"/>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="type_exit_entry" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="amount" attrs="{'readonly': [('type_exit_entry', '=', 'single')]}"/>
                                <field name="count" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('type_exit_entry', '=', 'single')],'invisible': [('type_exit_entry', '!=', 'single')]}"/>
                                <field name="journal_id" attrs="{'readonly': [('state', '!=', 'hr_manager_accept')],'required': [('state', '=', 'hr_manager_accept')]}" groups="base.group_system"/>
                                <field name="account_id" attrs="{'readonly': [('state', '!=', 'hr_manager_accept')],'required': [('state', '=', 'hr_manager_accept')]}" groups="base.group_system"/>
                                <field name="account_advanced_id" attrs="{'readonly': [('state', '!=', 'hr_manager_accept')],'required': [('state', '=', 'hr_manager_accept'),('type_exit_entry', '=', 'single')],'invisible': [('type_exit_entry', '!=', 'single')]}" groups="base.group_system"/>
                                <field name="analytic_account_id" attrs="{'readonly': [('state', 'in', ['accepted','refuse'])]}"/>

                            </group>

                        </group>
                        <notebook>
                            <page string="السلف" attrs="{'invisible': [('type_exit_entry', '!=', 'single')]}">
                                <field name="advanced_salary" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="القيود">
                                        <field name="move_id"/>
                            </page>

                        </notebook>
                    </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>


        <record id="action_exit_entry" model="ir.actions.act_window">
            <field name="name">exit_entry Renew</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exit.entry</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="exit_entry_tree"/>
        </record>


        <menuitem name="Exit Entry"
                  id="menu_base_exit_entry"
                  action="action_exit_entry"
                  parent="hr.menu_hr_employee_payroll"
                  sequence="20"/>


    </data>
</odoo>